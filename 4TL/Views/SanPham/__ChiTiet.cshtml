@model _4TL.Models.Product

@{
    ViewBag.Title = "Chi Tiet san pham: " + Model.Ten;
}
<h1>gia tri:</h1>
<h2>@ViewBag.BagName</h2>
<h2>@ViewData["DataName"] </h2>
<h2>@TempData["TempName"] </h2>
<div class="contact_section layout_padding">
    <div class="container">
        <div class="contact_section_2">
            <div class="row">
                <div class="col-md-6">
                    <div class="mail_section_1">
                        <div class="card" style="width: 18rem;">
                            <img src="/@Model.HinhDaiDien" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Ten</h5>
                                <p class="card-text">@Model.MoTa</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@Model.Ma</li>
                                <li class="list-group-item">@Model.Gia</li>
                            </ul>

                            <div class="card-body">
                                <a href="#" class="card-link">@_4TL.Ultil.Ultils.NumberToText(@Model.Gia)</a>
                            </div>
                        </div>
                        <div class="send_bt"><a href="#">Dat Hang</a></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_main">
                        <div class="map-responsive">
                            <img src="/@Model.HinhDaiDien" alt="" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>